!!!
%html
  %head
    %title Qtes
    %link{:rel => "stylesheet", :type => "text/css", :href => "/styles.css"}
  %body
    %div{:id => "header"}
      %ul.horizontal
        %li
          %a{:href => "/"} Front Page
        %li
          %a{:href => "/about"} About
        %li
          - if is_logged_in?
            %a{:href => "/qte"} Add Quote
        %li
          - if is_admin?
            %a{:href => "/user/all"} Users
        %li
          %a{:href => "/user/new"} Sign up
        %li
          - if !is_logged_in?
            %a{:href => "/login"} Login
          - else
            %a{:href => "/logout"} Log Out
    %div{:id => "messages"}
      - if flash[:error]
        %p.error= flash[:error]
      - if flash[:success]
        %p.success= flash[:success]
    %div{:id => "meat"}
      = yield
